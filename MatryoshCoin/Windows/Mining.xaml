<Window x:Class="MatryoshCoin.Windows.Mining"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

        xmlns:local="clr-namespace:MatryoshCoin.Windows"
        mc:Ignorable="d"
        Title="Mining" Height="450" Width="800">
    <Grid >
        <Border MinWidth="400" Margin="10" Background="White" VerticalAlignment="Center" Padding="100" MaxHeight="500">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray"  ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Нажмите кнопку Start" Foreground="BlueViolet" FontSize="25" HorizontalAlignment="Center" FontWeight="Bold" Margin="5"/>
                <Button Content="Start" x:Name="Start" Margin="5"  Background="BlueViolet" Click="Start_Click" />
                <Button Content="Stop" x:Name="Stop" Margin="5"  Background="BlueViolet" Click="Stop_Click" />
                <Button Content="Вернуться к выбору опций" x:Name="GoBack" Margin="5"  Background="BlueViolet" Click="GoBack_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
